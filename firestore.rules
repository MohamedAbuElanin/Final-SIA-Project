rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated and is the owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users Collection: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Subcollections (e.g., activityLogs, tests)
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // TestsResults Collection: Users can read/write their own results
    match /TestsResults/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Tests Collection (Questions): Public read, Admin write (restricted for now)
    match /tests/{testId} {
      allow read: if true;
      allow write: if false; // Only allow manual updates via console for now
    }
  }
}
